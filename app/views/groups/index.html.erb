<h1>List of all group</h1>
<ul>
  <li><h4><%= link_to 'Add Groups', new_group_path %></h4></li>
  <li><h4><%= link_to 'Main Menu', welcome_index_path %></h4></li>
</ul>
<table class="table table-hover">
<tr>
  <th>Group Name</th>
  <th>Description</th>
  <th>Category</th>
  <th>Contact</th>
  <th>Location</th>

</tr>

  <% @group.each do |group| %>
    <tr>
      <td><%= group.group_name %></td>
      <td><%= group.description %></td>
      <td><%= group.category %></td>
      <td><%= group.contact %></td>
      <td><%= group.location %></td>

      <td><%= link_to 'View Group', group_path(group) %></td>
      <td><%= link_to 'Edit Group Info', edit_group_path(group) %></td>
      <td><%= link_to 'Destroy', group_path(group),
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>

</table>
